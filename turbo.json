{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["build"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["./src/**/*.ts", "./src/**/*.svelte"],
      "outputs": ["./coverage/**"]
    },
    "typecheck": {
      "dependsOn": ["build"]
    }
  }
}
